<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_name_text"
        android:id="@+id/patient_name_edit_text"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"/>
    <EditText
        android:id="@+id/patient_name_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="@string/patient_name_hint"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/patient_age_edit_text"
        android:padding="8dp"
        android:text="@string/patient_age_text"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/patient_age_edit"
        android:hint="@string/patient_age_hint"
        android:numeric="signed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/patient_add_button"
        android:text="Add Patient"
        android:layout_gravity="center_horizontal"/>




</LinearLayout>