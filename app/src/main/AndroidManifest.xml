<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xinghan.android.loveandhelp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-sdk android:minSdkVersion="11" />
        <activity
            android:name=".ui.news.NewsListActivity"
            android:label="@string/app_name"
            >

        </activity>
        <activity
            android:name=".ui.news.NewsActivity"
            android:label="@string/news_title"
            android:parentActivityName=".ui.news.NewsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xinghan.android.loveandhelp.ui.news.NewsListActivity" />
        </activity>
        <activity android:name=".ui.main.MainActivity"
                  android:label="@string/app_name"
                  android:theme="@style/Theme.AppCompat.Light">

        </activity>
        <activity android:name=".ui.user.UserActivity"
                  android:label="@string/app_name"
                  android:theme="@style/Theme.AppCompat.Light">

        </activity>
        <activity android:name=".ui.patient.PatientListActivity"
                  android:label="@string/app_name"
                  android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ui.patient.PatientActivity"
                  android:label="@string/app_name"
                  android:theme="@style/Theme.AppCompat.Light">


        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
